            <view class="{{XueLi_num == 5?'add_citying':'add_city'}}" data-num="5" bindtap="clickXueLiNum" data-name="大专">大专</view>
            <view class="{{XueLi_num == 6?'add_citying':'add_city'}}" data-num="6" bindtap="clickXueLiNum" data-name="本科">本科</view>
