          </view>
        </swiper-item>
        <swiper-item>
          <view class="location_bottom" hidden="">
            <view class="{{ZhuSu_num == 0?'add_citying':'add_city'}} rightonetab" data-num="0" bindtap="clickZhuSuNum" data-name="住宿无要求">住宿无要求</view>
