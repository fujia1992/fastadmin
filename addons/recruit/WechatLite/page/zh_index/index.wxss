.focus {
  /*background-color: #DE3639;*/
  box-shadow: 2px 4px 6px #d6d6d6;
}
.focus .swiper {
  width: 750rpx;
  height: 416.6rpx;
  position: relative;
}

.focus .swiper image {
  width: 100%;
  height: 100%;
}

.focus .swiper .text {
  color: #fff;
  position: absolute;
  width: 100%;
  text-align: center;
  bottom: 30px;
  font-size: 16px;
  left: 0;
}

.focus .sel_city{
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  border: none;
  z-index: 99;
  padding: 0;
  font-size: 14px;
  color: #444;
  background: #fff;
}

.zan-capsule {
  -webkit-transform:scale(1) !important;
  transform:scale(1)!important;
  display:block;
}

.zan-capsule__left,.zan-capsule__right{
  border-radius:0;
}

